<html>

    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title></title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="/bootstrap.min.css">
        <link  rel="stylesheet" href="/custom_style.css">
    </head>

    <body class="background">
        <div  class="card position-absolute top-50 start-50 translate-middle shadow mb-5 bg-white width-auto "  style="margin-top: 100px;">
            <div class="card-content" style="width: 800px;">
                <div class="card-header-blue">
                    <div class="card-header-secondary-text">Mineski Bank - Seychelles </div>
                    <div class="card-header-title">Checking Accounts</div>
                    </div>
                <div class="card-body">

        <% if (checking_accounts.length>0) {%>
        <table class="table table-bordered">
            <thead>
                <th>Checking Account ID</th>
                <th>Branch Name</th>
                <th>Bank Balance </th>

            </thead>
            <tbody>
                <% for(var i=0; i<checking_accounts.length;i++) {%>
                <tr>
                    <td><%= checking_accounts[i].checking_account_id%></td>
                    <td><%= checking_accounts[i].branch_name%></td>
                    <td><%= checking_accounts[i].bank_balance%></td>
                </tr>
                <%}%>

                    </tbody>
                </table>
                <%}  else{%>
                    <div class="text-box-label">No checking accounts created.</div>
                <%}%>
                <br>
                <form action="/employee/checking_account" method="GET">
                    <input type="submit" value="Open New Checking Account" class="button" style="width: 400px;">
                </form>
                <br>

                <form action="/" method="GET">
                    <input type="submit" value="Home" class="button" style="width: 200px; background-color:#ff1744;">
                </form>
    </body>

</html>